    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profile_EditJobTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTIL"
        app:counterTextColor="@color/redApp"
        android:layout_marginTop="40dp"
        android:hint="@string/enter_job_descreption"
        android:layout_marginStart="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:autofillHints="@string/enter_job_descreption"
            android:id="@+id/profile_EditJobTitleDescription"
            android:completionThreshold="1"/>

    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profile_EditCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_EditJobTitle"
        app:counterTextColor="@color/redApp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:hint="@string/edit_your_company_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/edit_your_company_name"
            android:id="@+id/profile_EditCompanyDescription"
            android:padding="10dp"
            android:completionThreshold="1"/>


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_EditCompany"
        android:text="@string/edit"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/add_btn_profile"/>


</RelativeLayout>



