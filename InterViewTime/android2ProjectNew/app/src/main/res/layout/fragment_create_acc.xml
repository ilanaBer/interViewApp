<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:id="@+id/create_acc_back_btn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="@string/create_account"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mail_et_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:hint="@string/enter_email"
        app:counterTextColor="@color/redApp"
        app:startIconDrawable="@drawable/baseline_email_black_24dp"
        app:startIconContentDescription="email"
        style="@style/Widget.Design.TextInputLayout"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/orangeApp">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mail_acc_textInput"
            app:errorEnabled="true"
            android:inputType="textEmailAddress"
            app:errorIconTint="@color/colorPrimary"
            android:background="@drawable/edit_text_style"

            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_name_et_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:hint="@string/enter_username"
        app:counterTextColor="@color/redApp"
        app:startIconDrawable="@drawable/baseline_account_circle_black_24dp"
        app:startIconContentDescription="email"
        style="@style/Widget.Design.TextInputLayout"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/orangeApp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_name_acc_textInput"
            app:errorEnabled="true"
            app:errorIconTint="@color/colorPrimary"
            android:background="@drawable/edit_text_style"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_et_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:hint="@string/please_enter_pass"
        app:counterTextColor="@color/redApp"
        app:startIconDrawable="@drawable/baseline_lock_black_24dp"
        app:startIconContentDescription="email"
        app:endIconMode="password_toggle"
        style="@style/Widget.Design.TextInputLayout"
        app:boxStrokeWidth="2dp"
        android:inputType="textPassword"
        app:boxStrokeColor="@color/orangeApp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_acc_textInput"
            app:errorEnabled="true"
            android:inputType="textPassword"
            app:errorIconTint="@color/colorPrimary"
            android:background="@drawable/edit_text_style"


            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_et_acc_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:hint="@string/confirm_password"
        app:counterTextColor="@color/redApp"
        app:startIconDrawable="@drawable/baseline_lock_black_24dp"
        app:startIconContentDescription="email"
        style="@style/Widget.Design.TextInputLayout"
        app:boxStrokeWidth="2dp"
        app:endIconMode="password_toggle"
        android:inputType="textPassword"
        app:boxStrokeColor="@color/orangeApp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            android:id="@+id/password2_acc_textInput"
            app:errorEnabled="true"
            android:inputType="textPassword"
            app:errorIconTint="@color/colorPrimary"
            android:background="@drawable/edit_text_style"


            />
    </com.google.android.material.textfield.TextInputLayout>





    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textColor="#fff"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/btn_signup"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_style"
        android:padding="5dp"
        android:textSize="16sp"
       />

<!--
    android:backgroundTint="@color/redApp"
-->


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/already_have_an_account"
        android:textAllCaps="false"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:id="@+id/already_btn"
        android:gravity="center"
        />

</LinearLayout>